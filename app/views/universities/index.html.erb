<h1>Universities</h1>

<%= form_tag('/name_search', method: 'get') do %>
  <%= label_tag(:name, "Search by name:") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Search") %>
<% end %>

<br>

<% @universities.each do |university| %>
  <div class="well">
    <h3><%= university['name']%></h3>
    <p>Description:</p>
    <p><%= university['description']%></p>
    <p>Mascot: <em><%= university['mascot']%></em></p>
    <p>Student Population: <%= university['population']%></p>
  </div>
<% end %>
